

object Demo5 {
  def main(args: Array[String]): Unit = {
    def addx(num:Int,sum:Int):Int = {
      if(sum>50)return sum;
      if(num%2 ==0){
        println("hehe")
        addx(num+1,sum+num)
      }else{
        println("xixi")
        addx(num+1,sum)
      }
      
      
    }
    
    val result = addx(1,0);
      println(result);
  }
}